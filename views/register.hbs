<div class="myform">
    <div class="row justify-content-center">
        <div class="col-6 col-sm-4">
            <form action="/user/register" method="post">
                <div class="form-group">
                    <label class="register">Enter your name</label>
                    <input type="text" id="name" name="name" class="form-control">
                </div>                         
        </div>
        <div class="col-6 col-sm-4">
            <div class="form-group">
                <label class="register">Enter your valid email</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
        </div>   
        <div class="w-100"></div>
        <div class="col-6 col-sm-4">
            <div class="form-group">
                <label class="register">Enter your accounts username</label>
                <input type="text" id="username" name="username" class="form-control">
            </div>  
        </div>        
        <div class="col-6 col-sm-4">
                <div class="form-group">
                    <label class="register">Enter your password</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
        </div>
        <div class="w-100"></div>
        <div class="col-6 col-sm-4">
                <button type="submit" class="btn btn-info btn-lg btn-block">Register</button>                
            </form>
        </div>
    </div>
</div>    

