            </div>            
            <div class="form-group">
                <label >Content:</label>
                <textarea class="form-control" rows="5" id="body" name="body"></textarea>                
            </div>
            <div class="form-group">
                <label>Category</label>
                <select name='category' class='form-control'>
                <option>Choose category</option>}
                {{#each categories}}
                <option value="{{this.title}}">{{this.title}}</option>
                {{/each}}
                </select>                
             
            </div>   
                <div class="form-group">
                    <input name="myImage" id="input-1" type="file" class="file">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>    